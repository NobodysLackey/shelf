<%- include('../partials/header') %>

  <h2><%= user.name %>'s shelf</h2>
  <br><br>
    <% if (user.books < 1) { %>
    <span class="message">
    you don't have any books yet.<br><br>
    <h1>ðŸ˜¢</h1><br>
    <a href="/books/search">find a book</a> to add to your list!
    </span>
    <% } else { %>
        <table id="list">
            <thead>
                <tr>
                    <th>details</th>
                    <th>title</th>
                    <th>author</th>
                    <th>remove</th>
                </tr>
            </thead>
            <tbody>
                <% user.books.forEach((book, idx) => { %>
                    <tr>
                        <td>
                            <form action="/books/<%= book._id %>" method="GET">
                                <button type="submit" class="btn">view</button>
                            </form>
                        </td>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td>
                            <form action="/books/<%= idx %>?_method=DELETE" method="POST">
                                <button type="submit" class="deletebtn">x</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table><br>
            <p><a href="/books/search">add another</a> book to your shelf!</p>
        <br>
    <% } %>

<%- include('../partials/footer') %>